{
    "name": "site-olivier",
    "homepage": "https://chalet-lepanoramique.fr",
    "scripts": {
        "pre-commit": "npm run rebuild && npm run lint",
        "http-server": "http-server ./website -p 8080 -c-1",
        "build": "npm run tsc && npm run sass",
        "clean": "shx rm -rf website/script/* website/style/*",
        "rebuild": "npm run clean && npm run build",
        "tsc": "tsc --project src/config/tsconfig.json",
        "sass": "sass \"src/sass:website/style\" --style=compressed --no-source-map",
        "lint": "eslint src/ts -c src/config/.eslintrc.json --ext .ts",
        "lint-fix": "eslint src/ts -c src/config/.eslintrc.json --ext .ts --fix"
    },
    "author": "Jérémie PIELLARD <jeremie.piellard@gmail.com> (https://github.com/piellardj)",
    "repository": "github:piellardj/water-webgpu",
    "engines": {
        "node": ">=18.14.2"
    },
    "devDependencies": {
        "@types/bootstrap": "^5.2.6",
        "@typescript-eslint/eslint-plugin": "^5.58.0",
        "@typescript-eslint/parser": "^5.58.0",
        "eslint": "^8.38.0",
        "http-server": "^14.1.1",
        "sass": "^1.62.0",
        "shx": "^0.3.4",
        "typescript": "^5.0.4"
    }
}
